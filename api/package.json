{
  "name": "api",
  "private": true,
  "main": "build",
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write '**/*'",
    "server:watch": "nodemon .",
    "start": "rm -rf build && run-p tsc:watch server:watch",
    "test": "run-p test:*",
    "test:format": "prettier --check '**/*'",
    "test:types": "tsc --noEmit",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "apollo-server": "^2.14.2",
    "dotenv": "^8.1.0",
    "graphql": "^14.5.3",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.1",
    "node-fetch": "^2.6.0",
    "pg": "^7.12.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/node-fetch": "^2.5.0",
    "@types/pg": "^7.11.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
